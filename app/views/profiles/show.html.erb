<div class="container margin_100_55">
  <div class="row">
    <div class="col-lg-12 profile">
      <div class="header">
        <%= render(Profiles::AvatarComponent.new(src: asset_pack_path('media/images/avatar.jpg'), size: 140, klass: 'profile-user-avatar')) %>
        <div class="information">
          <div class="item">
            <span><%= @user.email %></span>
            <%= render(Profiles::FollowUnfollowButtonComponent.new(user: @user, current_user: current_user)) %>
          </div>
          <div class="item">
            <%= render(Profiles::PinsLinkComponent.new(user: @user)) %>
            <%= render(Profiles::FollowersLinkComponent.new(user: @user)) %>
            <%= render(Profiles::FollowingLinkComponent.new(user: @user)) %>
          </div>
        </div>
      </div>
      <div id="infinite-pins" class="body">
        <%= render(Pins::PinComponent.with_collection(@user_pins, current_user: current_user)) %>
      </div>
      <%= render(General::InfiniteScrollPagyComponent.new(pagy: @user_pins_pagy)) %>
    </div>
  </div>
</div>