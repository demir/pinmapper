<div class="container margin_100_55">
  <div class="row">
    <div class="col-lg-12 profile">
      <div class="header">
        <%= image_pack_tag 'media/images/avatar.jpg', class: 'rounded-circle user-avatar', alt: '' %>
        <div class="information">
          <div class="item">
            <span><%= @user.email %></span>
            <%= link_to t('follow'), '#', class: 'btn_1' %>
          </div>
          <div class="item">
            <%= link_to '#', class: 'black-link' do %>
              <b><%= @user.pins.count %></b>
              <span><%= t('activerecord.models.pin') %></span>
            <% end %>
            <%= link_to '#', class: 'black-link' do %>
              <b></b>
              <span><%= t('followers_tr') %></span>
            <% end %>
            <%= link_to '#', class: 'black-link' do %>
              <b></b>
              <span><%= t('following_tr') %></span>
            <% end %>
          </div>
        </div>
      </div>
      <%= render(Pins::PinComponent.with_collection(@user.pins, current_user: current_user)) %>
    </div>
  </div>
</div>