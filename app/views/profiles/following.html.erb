<% set_meta_tags alternate: { "en" => following_profile_url(@user, locale: :en),
                              "tr" => following_profile_url(@user, locale: :tr) } %>
<% page_title = "@#{@user.username} / #{ t('following_tr') }" %>
<% title page_title %>
<% image = cloudfront_src(filters: '200x200/filters:format(jpeg)', thumbor_crop: thumbor_crop(@user.profile.avatar_crop_constraints, @user.profile.avatar&.metadata), image_key: @user.profile.avatar.key) %>
<% set_meta_tags og: {
      type:     'website',
      title: "#{ page_title } - Pinmapper",
      description: @user&.profile&.bio,
      site: :site,
      image:    image,
      url: following_profile_url(@user)
    } %>
<% set_meta_tags twitter: {
      card: "summary_large_image",
      title: "#{ page_title } - Pinmapper",
      description: @user&.profile&.bio,
      site: :site,
      image:    image,
      url: following_profile_url(@user)
    } %>
<div class="container margin_100_55">
  <div class="row">
    <div class="col-lg-12 profile">
      <%= render 'profiles/profile_header', user: @user %>
      <div class="body">
        <% if @following.any? %>
          <div id="following" class="with-shadow">
            <%= render(Profiles::FollowUserListItemComponent.with_collection(@following, current_user: current_user)) %>
          </div>
          <%= render(General::InfiniteScrollPagyComponent.new(pagy: @pagy)) %>
        <% else %>
          <div class="no-data">
            <% if @user == current_user %>
              <p><%= t('.no_data_for_current_user') %></p>
            <% else %>
              <p><%= t('.no_data') %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>