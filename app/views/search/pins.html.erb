<div class="container margin_100_55 search">
  <div class="row col-lg-9 offset-lg-3 title">
    <div class="main_title_3">
      <span><em></em></span>
      <h2><%= t('search.results') %></h2>
    </div>
  </div>
    <div class="row">
    <div class="col-lg-3 search-sidemenu">
      <%= render 'search/sidemenu', page: :pins %>
    </div>
    <div class="col-lg-9 search-main">
      <div class="body">
        <% if @pins.present? %>
          <div id="infinite-pins" class="row infinite-pins">
            <%= render(Pins::PinComponent.with_collection(@pins, current_user: current_user)) %>
          </div>
          <%= render(General::InfiniteScrollPagyComponent.new(pagy: @pagy)) %>
        <% else %>
          <div class="row">
            <p class="no-results-found"><%= t('search.no_results_found') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
