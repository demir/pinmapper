<% set_meta_tags alternate: { "en" => search_boards_url(locale: :en),
                              "tr" => search_boards_url(locale: :tr) } %>
<div class="container margin_100_55 search">
  <div class="row col-lg-9 offset-lg-3 title">
    <div class="main_title_3">
      <span><em></em></span>
      <h2><%= t('search.results') %></h2>
    </div>
  </div>
    <div class="row">
    <div class="col-lg-3 search-sidemenu">
      <%= render 'search/sidemenu', page: :boards %>
    </div>
    <div class="col-lg-9 search-main">
      <div class="body">
        <% if @boards.present? %>
          <div id="boards" class="row">
            <%= render(Boards::BoardComponent.with_collection(@boards, options: { current_user: current_user })) %>
          </div>
          <%= render(General::InfiniteScrollPagyComponent.new(pagy: @pagy)) %>
        <% else %>
          <div class="row">
            <p class="no-results-found"><%= t('search.no_results_found') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
