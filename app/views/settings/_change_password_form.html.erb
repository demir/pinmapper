<%= simple_form_for(current_user, url: settings_users_change_password_path, html: { method: :put }) do |f| %>
  <%= f.input :password, autofocus: true, input_html: { class: 'form-control', id: 'password1' }, hint: t('devise.minimum_characters', count: User.password_length.min) %>
  <%= f.input :password_confirmation, input_html: { class: 'form-control', id: 'password2' } %>
  <%= f.input :current_password, hint: t('settings.current_password_hint'), input_html: { class: 'form-control', id: 'current-password' } %>
  <%= f.button :submit, t('update'), class: 'btn_1 rounded' %>
<% end %>