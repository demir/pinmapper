  <div class="row col-lg-9 offset-lg-3 title">
    <div class="main_title_3">
      <span><em></em></span>
      <h2><%= t('settings.settings') %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3 settings-sidemenu">
      <%= render 'settings/sidemenu', page: :change_email %>
    </div>
    <div class="col-lg-9 settings-main">
      <div class="header">
        <h1><%= title t('settings.change_email') %></h1>
      </div>
      <div class="body" id="change_email_form">
