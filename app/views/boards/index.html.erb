<div class="container margin_100_55">
  <div class="row">
    <div class="col-lg-12 boards">
      <div class="header">
        <div class="main_title_3">
          <span><em></em></span>
          <h2 id="boards-count"><%= "#{t('boards.boards')} (#{current_user.boards_count})" %></h2>
        </div>
        <%= link_to t('.create_new_board'), new_board_path, class: 'btn_1 outline' %>
      </div>
      <div class="body">
        <% if @boards.any? %>
          <div id="infinite-boards">
            <%= render(Boards::BoardComponent.with_collection(@boards, options: { current_user: current_user, show_privacy_badge: true, name_class: 'black-link' })) %>
          </div>
          <%= render(General::InfiniteScrollPagyComponent.new(pagy: @pagy)) %>
        <% else %>
          <div class="no-data">
            <p><%= t('.no_data') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- /container -->
