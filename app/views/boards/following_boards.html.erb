<div class="container margin_100_55">
  <div class="row">
    <div class="col-lg-12 boards">
      <div class="header">
        <div class="main_title_3">
          <span><em></em></span>
          <h2 id="boards-count"><%= "#{t('boards.following_boards')} (#{current_user.following_boards_count})" %></h2>
        </div>
      </div>
      <div class="body">
        <div id="infinite-boards">
          <%= render(Boards::BoardComponent.with_collection(@boards, options: { current_user: current_user, name_class: 'black-link' })) %>
        </div>
        <%= render(General::InfiniteScrollPagyComponent.new(pagy: @pagy)) %>
      </div>
    </div>
  </div>
</div>
