<div class="container margin_100_55">
  <div class="row">
    <div class="col-lg-12 boards">
      <div class="header">
        <div class="main_title_3 small-h1">
          <span><em></em></span>
          <div class="title"><h1><%= title t('.title') %></h1><div class="count"><%= "(#{current_user.following_boards_count})" %></div></div>
        </div>
      </div>
      <div class="body">
        <% if @boards.any? %>
          <div id="infinite-boards">
            <%= render(Boards::BoardComponent.with_collection(@boards, options: { current_user: current_user })) %>
          </div>
          <%= render(General::InfiniteScrollPagyComponent.new(pagy: @pagy)) %>
        <% else %>
          <div class="no-data">
            <p><%= t('.no_data') %></p>
          <div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- /container -->
