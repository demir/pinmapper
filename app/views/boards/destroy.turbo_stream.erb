<%= turbo_stream.update('toastr', partial: 'shared/toastr', formats: [:turbo_stream]) %>
<%= turbo_stream.remove(@board) %>

<%= turbo_stream.update "boards-count" do %>
  <%= "#{t('boards.boards')} (#{current_user.boards.count})" %>
<% end %>

<%= turbo_stream.replace "boards_link_#{dom_id(current_user)}" do %>
  <%= render(Profiles::BoardsLinkComponent.new(user: current_user)) %>
<% end %>