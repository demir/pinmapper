<div class="container margin_100_55">
  <div class="row">
    <div class="col-lg-12 liked-pins">
      <div class="header">
        <div class="main_title_3 small-h1">
          <span><em></em></span>
          <div class="title"><h1><%= title t('liked_pins') %></h1><div class="count"><%= "(#{@pagy.count})" %></div></div>
        </div>
      </div>
      <% if @pins.any? %>
        <div id="infinite-pins" class="infinite-pins">
          <%= render(Pins::PinComponent.with_collection(@pins, current_user: current_user)) %>
          <!-- /pin_lists -->
        </div>
        <%= render(General::InfiniteScrollPagyComponent.new(pagy: @pagy)) %>
      <% else %>
        <div class="no-data">
          <p><%= t('.no_data') %></p>
        <div>
      <% end %>
    </div>
  </div>
</div>
<!-- /container -->
