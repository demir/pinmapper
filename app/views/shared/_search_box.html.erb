<div class="search">
  <%= form_with url: search_pins_path, method: :get do |form| %>
    <%= form.text_field :q, class: 'form-control', placeholder: t('search.search'), autocomplete: 'off', value: params[:q] %>
    <%= form.button :submit do %>
      <i class='icon_search'></i>
    <% end %>
  <% end %>
</div>