<header class="header sticky menu_fixed">
  <%= link_to root_path do %>
    <%= image_pack_tag 'media/images/logo-sticky.png', size: '150x36', class: 'logo_sticky' %>
  <% end %>
  <div class="btn_mobile">
    <div class="hamburger hamburger--spin-r" id="hamburger">
      <div class="hamburger-box">
        <div class="hamburger-inner"></div>
      </div>
    </div>
  </div>
  <nav class="main-menu">
    <ul class="nav-menu">
      <% if user_signed_in? %>
        <li>
          <%= link_to t('.new_pin'), new_pin_path, class: 'btn_1' %>
        </li>
      <% end %>
      <li>
        <span><%= link_to t('pins.pins'), pins_path, title: t('pins.pins') %></span>
      </li>
      <% if user_signed_in? %>
        <li>
          <div class="dropdown dropdown-user">
            <%= link_to '#0', class: 'logged', 'data-toggle': 'dropdown', title: current_user.email do %>
              <%= image_pack_tag 'media/images/avatar.jpg', alt: '' %>
              <%= render(Profiles::AvatarComponent.new(src: asset_pack_path('media/images/avatar.jpg'), size: 26)) %>
            <% end %>
            <div class="dropdown-menu">
              <%= link_to t('profile'), profile_path(current_user), title: t('profile'), class: 'dropdown-item' %>
              <%= link_to t('devise.sign_out'), destroy_user_session_path, method: :delete, title: t('devise.sign_out'), class: 'dropdown-item' %>
            </div>
          </div>
        </li>
      <% else %>
        <li><span>
          <%= link_to t('devise.sign_in'), new_user_session_path, id: 'sign-in', class: 'login', title: t('devise.sign_in') %>
        </span></li>
        <li><span>
          <%= link_to t('devise.sign_up'), new_user_registration_path, class: 'login', title: t('devise.sign_up') %>
        </span></li>
      <% end %>
    </ul>
  </nav>
</header>
<!-- /header -->