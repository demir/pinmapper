<% if !current_user&.cookies_confirmation_status_accepted? && cookies[:allow_cookies].blank? %>
  <div id="cookies-bar" class="cookies-bar" data-controller="cookie-bar">
    <p>
      <%= sanitize t('shared.footer.cookies_bar_message',
                            privacy_policy: link_to(t('shared.footer.privacy_policy'), privacy_policy_path),
                            terms_of_use: link_to(t('shared.footer.terms_of_use'), terms_of_use_path),
                            cookie_policy: link_to(t('shared.footer.cookie_policy'), cookie_policy_path)) %>
    </p>
    <% if current_user.present? %>
      <%= link_to t('done'), settings_accept_cookies_path,
                            class: 'btn_1',
                            data: { action: 'click->cookie-bar#allowCookies', 'turbo-stream': true } %>
    <% else %>
      <button type="button" class="btn_1" data-action="click->cookie-bar#allowCookies"><%= t('done') %></button>
    <% end %>
  </div>
<% end %>