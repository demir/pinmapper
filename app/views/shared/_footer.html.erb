      <div class="col-lg-5 col-md-12 p-r-5">
        <%= link_to root_path do %>
          <p><%= image_pack_tag 'media/images/logo.png', size: '150x36' %></p>
        <% end %>
        <div class="follow_us">
          <ul>
            <li>Follow us</li>
            <li><a href="https://twitter.com/pinmapper"><i class="ti-twitter-alt"></i></a></li>
            <li><a href="https://www.instagram.com/pinmapper"><i class="ti-instagram"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 ml-lg-auto">
        <h5>Useful links</h5>
        <ul class="links">
          <li><a href="#">About</a></li>
          <li><a href="#">Login</a></li>
          <li><a href="#">Register</a></li>
          <li><a href="#">Contacts</a></li>
        </ul>
      </div>
      <div class="col-lg-3 col-md-6">
        <h5>Contact with Us</h5>
        <ul class="contacts">
          <li><a href="mailto:hellopinmapper@gmail.com"><i class="ti-email"></i> hellopinmapper@gmail.com</a></li>
        </ul>
      </div>
    </div>
    <!--/row-->
    <hr>
    <div class="row">
      <div class="col-lg-6">
        <ul id="footer-selector">
          <li>
            <div class="dropdown show">
              <a class="btn btn-secondary btn-sm dropdown-footer" href="#" role="button" id="dropdownLang" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= I18n.locale == :tr ? "Türkçe" : "English" %>
                <i class="fa fa-globe"></i>
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdownLang">
                <%= link_to "Türkçe", { locale: :tr }, class: 'dropdown-item' %>
                <%= link_to "English", { locale: :en }, class: 'dropdown-item' %>
              </div>
            </div>
          </li>
        </ul>
      </div>
      <div class="col-lg-6">
        <ul id="additional_links">
          <li><a href="#">Terms and conditions</a></li>
          <li><a href="#">Privacy</a></li>
          <li><span><%= render 'shared/copy' %></span></li>
        </ul>
      </div>
    </div>
  </div>
