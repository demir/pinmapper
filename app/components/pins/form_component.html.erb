<%= simple_form_for(@pin, data: { controller: 'pin', action: 'google-maps-callback@window->pin#initMap', 'pin-latitude-value': @pin.latitude, 'pin-longitude-value': @pin.longitude }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address, as: :search, input_html: { data: { 'pin-target': 'field' , action: 'keydown->pin#keydown' }} %>
    <div class="p-4">
      <div data-pin-target="map" style="height:400px;width:100%"></div>
    </div>
    <div class="form-horizontal-group">
      <%= f.input :category, collection: f.object.class.translated_categories %>
      <%= f.input :privacy, collection: f.object.class.translated_privacies %>
    </div>
    <%= f.input :cover_image_description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn_1' %>
  </div>
<% end %>
